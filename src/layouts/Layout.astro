---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Explore the fascinating world of prehistoric creatures" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="main-header">
			<nav>
				<div class="logo">
					<a href="/">Prehistoric World</a>
				</div>
				<div class="nav-links">
					<a href="/">Home</a>
					<a href="/timeline">Timeline</a>
					<a href="/categories">Categories</a>
					<a href="/search">Search</a>
					<a href="/about">About</a>
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; All Rights Reserved by Xinhao, 2025</p>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #2c3e50;
		--secondary-color: #34495e;
		--accent-color: #e74c3c;
		--background-color: #ecf0f1;
		--text-color: #2c3e50;
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: system-ui, sans-serif;
		background: var(--background-color);
		color: var(--text-color);
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.main-header {
		background: var(--primary-color);
		padding: 1rem 2rem;
		color: white;
	}

	nav {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo a {
		font-size: 1.5rem;
		font-weight: bold;
		color: white;
		text-decoration: none;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
	}

	.nav-links a {
		color: white;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.nav-links a:hover {
		color: var(--accent-color);
	}

	main {
		flex: 1;
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		width: 100%;
	}

	footer {
		background: var(--primary-color);
		color: white;
		text-align: center;
		padding: 1rem;
		margin-top: auto;
	}

	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1rem;
		}

		.nav-links {
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}

		.nav-links a {
			font-size: 1.1rem;
		}
	}
</style>