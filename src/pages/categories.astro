---
import Layout from '../layouts/Layout.astro';
import { categories } from '../data/categories';

const categoryEntries = Object.entries(categories).map(([name, subcategories]) => ({
  name,
  subcategories,
  image: `/images/categories/${name.toLowerCase().replace(/\s+/g, '-')}.jpg`,
  description: `Explore ${name} from prehistoric times.`
}));
---

<Layout title="Prehistoric Categories">
  <div class="categories-container">
    <h1>Explore by Category</h1>
    
    <div class="categories-grid">
      {categoryEntries.map(category => (
        <a href={`/category/${category.name.toLowerCase().replace(/\s+/g, '-')}`} class="category-card">
          <div class="category-image">
            <img src={category.image} alt={category.name} />
          </div>
          <div class="category-info">
            <h2>{category.name}</h2>
            <p class="description">{category.description}</p>
            <div class="subcategories">
              {category.subcategories.map(sub => (
                <span class="subcategory-tag">{sub}</span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .categories-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    color: var(--primary-color);
    margin-bottom: 2rem;
    text-align: center;
    font-size: 2.5rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }
  }

  .category-card {
    background: var(--card-bg);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 4px var(--shadow-color);
    transition: transform 0.3s ease, background-color 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .category-card:hover {
    transform: translateY(-5px);
  }

  .category-image {
    height: 200px;
    overflow: hidden;
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .category-info {
    padding: 1.5rem;
  }

  .category-info h2 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    font-size: 1.5rem;
  }

  .description {
    color: var(--secondary-color);
    margin-bottom: 1rem;
  }

  .subcategories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .subcategory-tag {
    background: var(--background-color);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.875rem;
    color: var(--secondary-color);
  }
</style>