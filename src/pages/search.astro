    padding: 0.75rem 1.5rem;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  button:hover {
    background: var(--accent-color);
  }

  .results-info {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--text-muted);
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .results-grid {
      grid-template-columns: 1fr;
    }
  }

  .creature-card {
    border: 1px solid var(--card-border);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s, background-color 0.3s;
    display: flex;
    flex-direction: column;
    background: var(--card-bg);
  }

  .creature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 12px var(--shadow-color);
  }

  .creature-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .creature-info {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  h2 {
    margin: 0 0 0.5rem 0;
    color: var(--primary-color);
    font-size: 1.5rem;
  }

  .scientific-name {
    font-style: italic;
    color: var(--text-muted);
    margin: 0 0 0.5rem 0;
  }

  .description {
    margin: 0 0 1rem 0;
    line-height: 1.4;
    color: var(--text-color);
    flex-grow: 1;
  }

  .metadata {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: var(--surface-elevated);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .no-results {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    background: var(--surface-elevated);
    border-radius: 8px;
    color: var(--text-muted);
  }

  .learn-more {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--primary-color);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.3s ease;
    align-self: flex-start;
  }

  .learn-more:hover {
    background: var(--accent-color);
  }

  @media (max-width: 768px) {
    .search-container {
        padding: 1rem;
    }

    .search-input-wrapper {
        flex-direction: column;
    }

    button {
        width: 100%;
    }
  }

  /* Fun Kid-Friendly Pagination - using :global for dynamic content */
  :global(.pagination) {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 3rem;
    margin-bottom: 1rem;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  :global(.pagination > a),
  :global(.pagination > span) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 2.75rem;
    height: 2.75rem;
    padding: 0 0.875rem;
    border: none;
    background: var(--card-bg);
    color: var(--primary-color);
    font-family: 'Nunito', sans-serif;
    font-weight: 800;
    font-size: 1rem;
    border-radius: 12px;
    text-decoration: none;
    box-shadow: 0 2px 8px var(--shadow-color);
    transition: all 0.2s ease;
  }

  /* Reset styles for inner spans */
  :global(.pagination .arrow),
  :global(.pagination .text) {
    display: inline;
    min-width: auto;
    height: auto;
    padding: 0;
    background: transparent;
    box-shadow: none;
    border-radius: 0;
  }

  :global(.pagination a:hover:not([disabled])) {
    background: var(--accent-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
  }

  :global(.pagination a:active:not([disabled])) {
    transform: translateY(0);
    box-shadow: 0 2px 4px rgba(44, 62, 80, 0.15);
  }

  :global(.pagination a:focus-visible) {
    outline: 3px solid var(--fun-blue);
    outline-offset: 3px;
  }

  :global(.pagination .current) {
    background: var(--primary-color);
    color: white;
    box-shadow: 0 2px 8px rgba(44, 62, 80, 0.25);
    cursor: default;
  }

  :global(.pagination a[disabled]) {
    background: var(--surface-elevated);
    color: var(--text-muted);
    cursor: not-allowed;
    box-shadow: none;
    opacity: 0.6;
  }

  :global(.pagination a[disabled]:hover) {
    transform: none;
    background: var(--surface-elevated);
    color: var(--text-muted);
  }

  /* Nav buttons - Prev/Next */
  :global(.pagination .prev),
  :global(.pagination .next) {
    padding: 0 1rem;
    background: var(--primary-color);
    color: white;
    box-shadow: 0 2px 8px rgba(44, 62, 80, 0.2);
  }

  :global(.pagination .prev:hover:not([disabled])),
  :global(.pagination .next:hover:not([disabled])) {
    background: var(--accent-color);
    box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
  }

  @media (max-width: 768px) {
    :global(.pagination) {
      gap: 0.25rem;
    }

    :global(.pagination > a),
    :global(.pagination > span) {
      min-width: 2rem;
      height: 2rem;
      font-size: 0.8rem;
      padding: 0 0.5rem;
      border-radius: 8px;
    }

    :global(.pagination .prev),
    :global(.pagination .next) {
      padding: 0 0.5rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 420px) {
    :global(.pagination) {
      gap: 0.2rem;
      padding: 0 0.25rem;
    }

    :global(.pagination > a),
    :global(.pagination > span) {
      min-width: 1.6rem;
      height: 1.6rem;
      font-size: 0.7rem;
      padding: 0 0.3rem;
      border-radius: 6px;
    }

    :global(.pagination .prev),
    :global(.pagination .next) {
      min-width: 1.6rem;
      padding: 0 0.3rem;
      font-size: 0.8rem;
    }

    /* Hide text labels, show only arrows on small screens */
    :global(.pagination .text) {
      display: none !important;
    }
  }

  /* Very small screens - minimal pagination */
  @media (max-width: 375px) {
    :global(.pagination) {
      gap: 0.2rem;
      padding: 0 0.25rem;
    }

    :global(.pagination > a),
    :global(.pagination > span) {
      min-width: 1.5rem;
      height: 1.5rem;
      font-size: 0.65rem;
      padding: 0 0.25rem;
      border-radius: 4px;
    }

    :global(.pagination .prev),
    :global(.pagination .next) {
      min-width: auto;
      padding: 0 0.4rem;
      font-size: 0.85rem;
    }
  }

  /* Arrow spacing */
  :global(.pagination .prev .arrow) {
    margin-right: 0.25rem;
  }

  :global(.pagination .next .arrow) {
    margin-left: 0.25rem;
  }

  @media (max-width: 420px) {
    :global(.pagination .prev .arrow),
    :global(.pagination .next .arrow) {
      margin: 0;
    }
  }
</style>