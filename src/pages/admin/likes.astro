---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getAllCreaturesWithLikes } from '../../db/index';
import { creatures } from '../../data/creatures';

interface CreatureLikes {
    creatureId: string;
    name: string;
    totalLikes: number;
    ips: string[];
}

let creatureLikesData: CreatureLikes[] = [];
let error: string | null = null;
let totalLikes = 0;

try {
    const likesData = await getAllCreaturesWithLikes();
    totalLikes = likesData.reduce((sum, item) => sum + item.totalLikes, 0);

    creatureLikesData = likesData.map(item => {
        const creature = creatures.find(c => c.id === item.creatureId);
        return {
            creatureId: item.creatureId,
            name: creature?.name || item.creatureId,
            totalLikes: item.totalLikes,
            ips: item.ips
        };
    });
} catch (e) {
    error = e instanceof Error ? e.message : 'An unknown error occurred';
    console.error('Error loading likes:', e);
}
---

<AdminLayout title="Like Statistics">
    <header class="page-header">
        <div class="header-content">
            <div>
                <h1 class="page-title">Like Statistics</h1>
                <p class="page-subtitle">Track engagement and popularity across creatures</p>
            </div>
        </div>
    </header>

    <div class="page-content">
        {error ? (
            <div class="error-card">
                <div class="error-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="15" y1="9" x2="9" y2="15"/>
                        <line x1="9" y1="9" x2="15" y2="15"/>
                    </svg>
                </div>
                <div class="error-content">
                    <h3>Error Loading Data</h3>
                    <p>{error}</p>
                    <p class="error-hint">Please check your Redis configuration and try again.</p>
                </div>
            </div>
        ) : (
            <>
                <!-- Stats Summary -->
                <div class="stats-row">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                            </svg>
                        </div>
                        <div class="stat-info">
                            <span class="stat-value">{totalLikes}</span>
                            <span class="stat-label">Total Likes</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon green">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
                                <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                                <line x1="9" y1="9" x2="9.01" y2="9"/>
                                <line x1="15" y1="9" x2="15.01" y2="9"/>
                            </svg>
                        </div>
                        <div class="stat-info">
                            <span class="stat-value">{creatureLikesData.length}</span>
                            <span class="stat-label">Creatures with Likes</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon orange">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="18" y1="20" x2="18" y2="10"/>
                                <line x1="12" y1="20" x2="12" y2="4"/>
                                <line x1="6" y1="20" x2="6" y2="14"/>
                            </svg>
                        </div>
                        <div class="stat-info">
                            <span class="stat-value">{creatureLikesData.length > 0 ? (totalLikes / creatureLikesData.length).toFixed(1) : 0}</span>
                            <span class="stat-label">Avg. Likes per Creature</span>
                        </div>
                    </div>
                </div>

                <!-- Leaderboard -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Popularity Leaderboard</h2>
                        <span class="badge">{creatureLikesData.length} creatures</span>
                    </div>
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th style="width: 60px">Rank</th>
                                    <th>Creature</th>
                                    <th style="width: 120px">Likes</th>
                                    <th style="width: 200px">Popularity</th>
                                    <th style="width: 100px">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {creatureLikesData.length === 0 ? (
                                    <tr>
                                        <td colspan="5" class="empty-state">
                                            <div class="empty-icon">
                                                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                                                </svg>
                                            </div>
                                            <p>No likes recorded yet</p>
                                            <span>Likes will appear here when visitors engage with creatures</span>
                                        </td>
                                    </tr>
                                ) : (
                                    creatureLikesData.map((item, index) => {
                                        const maxLikes = creatureLikesData[0]?.totalLikes || 1;
                                        const percentage = (item.totalLikes / maxLikes) * 100;
                                        return (
                                            <tr>
                                                <td>
                                                    <span class={`rank ${index < 3 ? `rank-${index + 1}` : ''}`}>
                                                        {index < 3 ? (
                                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                                            </svg>
                                                        ) : null}
                                                        #{index + 1}
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href={`/creature/${item.creatureId}`} target="_blank" class="creature-link">
                                                        {item.name}
                                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                                            <polyline points="15 3 21 3 21 9"/>
                                                            <line x1="10" y1="14" x2="21" y2="3"/>
                                                        </svg>
                                                    </a>
                                                </td>
                                                <td>
                                                    <span class="likes-count">{item.totalLikes}</span>
                                                </td>
                                                <td>
                                                    <div class="progress-bar">
                                                        <div class="progress-fill" style={`width: ${percentage}%`}></div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <button
                                                        class="btn btn-ghost btn-sm"
                                                        data-creature-id={item.creatureId}
                                                        data-creature-name={item.name}
                                                        data-ips={JSON.stringify(item.ips)}
                                                        onclick="showDetails(this)"
                                                    >
                                                        Details
                                                    </button>
                                                </td>
                                            </tr>
                                        );
                                    })
                                )}
                            </tbody>
                        </table>
                    </div>
                </div>
            </>
        )}
    </div>

    <!-- Details Modal -->
    <div id="details-modal" class="modal hidden">
        <div class="modal-backdrop" onclick="closeModal()"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modal-title">Like Details</h2>
                <button class="modal-close" onclick="closeModal()">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"/>
                        <line x1="6" y1="6" x2="18" y2="18"/>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div id="modal-content"></div>
            </div>
        </div>
    </div>
</AdminLayout>

<style>
    /* Stats Row */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .stat-card {
        background: var(--admin-surface);
        border: 1px solid var(--admin-border);
        border-radius: 8px;
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(168, 85, 247, 0.15);
        color: var(--color-engagement);
    }

    .stat-icon.green {
        background: rgba(34, 197, 94, 0.15);
        color: var(--admin-success);
    }

    .stat-icon.orange {
        background: rgba(245, 158, 11, 0.15);
        color: var(--admin-warning);
    }

    .stat-info {
        display: flex;
        flex-direction: column;
    }

    /* Card Styling */
    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .badge {
        background: var(--admin-surface-hover);
        color: var(--admin-text-muted);
        font-size: 0.75rem;
        padding: 0.25rem 0.75rem;
        border-radius: 999px;
    }

    /* Table Enhancements */
    .rank {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        font-family: var(--font-mono);
        font-weight: 600;
        color: var(--admin-text-muted);
    }

    .rank-1 {
        color: #fbbf24;
    }

    .rank-2 {
        color: #9ca3af;
    }

    .rank-3 {
        color: #d97706;
    }

    .creature-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--admin-text);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.15s ease;
    }

    .creature-link:hover {
        color: var(--admin-accent);
    }

    .creature-link svg {
        opacity: 0;
        transition: opacity 0.15s ease;
    }

    .creature-link:hover svg {
        opacity: 1;
    }

    .likes-count {
        font-family: var(--font-mono);
        font-weight: 600;
        font-size: 1rem;
        color: var(--color-engagement);
    }

    /* Progress Bar */
    .progress-bar {
        height: 8px;
        background: var(--admin-border);
        border-radius: 4px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--color-engagement) 0%, #c084fc 100%);
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    /* Button Small */
    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.75rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 3rem 1rem !important;
    }

    .empty-icon {
        color: var(--admin-text-dim);
        margin-bottom: 1rem;
    }

    .empty-state p {
        font-weight: 600;
        color: var(--admin-text);
        margin-bottom: 0.25rem;
    }

    .empty-state span {
        font-size: 0.8125rem;
        color: var(--admin-text-muted);
    }

    /* Error Card */
    .error-card {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 8px;
        padding: 2rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .error-icon {
        color: var(--admin-danger);
        flex-shrink: 0;
    }

    .error-content h3 {
        color: var(--admin-danger);
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .error-content p {
        color: var(--admin-text);
        margin-bottom: 0.5rem;
    }

    .error-hint {
        font-size: 0.8125rem;
        color: var(--admin-text-muted);
    }

    /* Modal */
    .modal {
        position: fixed;
        inset: 0;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal.hidden {
        display: none;
    }

    .modal-backdrop {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(4px);
    }

    .modal-content {
        position: relative;
        background: var(--admin-surface);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        width: 90%;
        max-width: 500px;
        max-height: 80vh;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    }

    .modal-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--admin-border);
    }

    .modal-header h2 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--admin-text);
    }

    .modal-close {
        background: none;
        border: none;
        color: var(--admin-text-dim);
        cursor: pointer;
        padding: 0.25rem;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.15s ease;
    }

    .modal-close:hover {
        background: var(--admin-surface-hover);
        color: var(--admin-text);
    }

    .modal-body {
        padding: 1.25rem;
        max-height: 60vh;
        overflow-y: auto;
    }

    .ip-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .ip-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.625rem 0.875rem;
        background: var(--admin-bg);
        border-radius: 6px;
        font-family: var(--font-mono);
        font-size: 0.8125rem;
        color: var(--admin-text-muted);
    }

    .ip-item svg {
        color: var(--admin-text-dim);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .stats-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<script is:inline>
    function showDetails(button) {
        const name = button.dataset.creatureName;
        const ips = JSON.parse(button.dataset.ips || '[]');

        document.getElementById('modal-title').textContent = `Likes for ${name}`;

        const content = document.getElementById('modal-content');
        if (ips.length === 0) {
            content.innerHTML = '<p style="color: var(--admin-text-muted)">No IP data available</p>';
        } else {
            content.innerHTML = `
                <p style="margin-bottom: 1rem; color: var(--admin-text-muted); font-size: 0.8125rem;">
                    ${ips.length} unique visitor${ips.length !== 1 ? 's' : ''} liked this creature
                </p>
                <div class="ip-list">
                    ${ips.map(ip => `
                        <div class="ip-item">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="2" y="2" width="20" height="8" rx="2" ry="2"/>
                                <rect x="2" y="14" width="20" height="8" rx="2" ry="2"/>
                                <line x1="6" y1="6" x2="6.01" y2="6"/>
                                <line x1="6" y1="18" x2="6.01" y2="18"/>
                            </svg>
                            ${ip}
                        </div>
                    `).join('')}
                </div>
            `;
        }

        document.getElementById('details-modal').classList.remove('hidden');
    }

    function closeModal() {
        document.getElementById('details-modal').classList.add('hidden');
    }

    // Close on escape
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
    });
</script>
