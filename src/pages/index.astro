---
import Layout from '../layouts/Layout.astro';
import FeaturedCreatures from '../components/FeaturedCreatures.astro';
import DidYouKnow from '../components/DidYouKnow.astro';
import LatestUpdates from '../components/LatestUpdates.astro';

const title = "Explore the Prehistoric World";
const description = "Journey through time and discover fascinating prehistoric creatures, from mighty dinosaurs to ancient life forms. Explore interactive timelines, detailed creature profiles, and amazing prehistoric facts.";
---

<Layout 
	title={title}
	description={description}
	image="/images/hero-bg.jpg"
	type="website"
>
	<div class="hero">
		<h1>Welcome to Prehistoric World</h1>
		<p>Discover the fascinating creatures that once roamed our planet</p>
	</div>

	<section class="featured">
		<h2>Featured Creatures</h2>
		<FeaturedCreatures />
	</section>

	<LatestUpdates />

	<DidYouKnow />
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 4rem 2rem;
		background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/hero-bg.jpg');
		background-size: cover;
		background-position: center;
		color: white;
		margin: -2rem -2rem 2rem -2rem;
	}

	.hero h1 {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: 1rem;
		color: white;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
	}

	.hero p {
		font-size: 1.25rem;
		max-width: 600px;
		margin: 0 auto;
		color: white;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	section {
		margin-bottom: 4rem;
	}

	h2 {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 2rem;
		color: var(--primary-color);
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2rem;
		}
	}
</style>